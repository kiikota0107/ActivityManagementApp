@using ActivityManagementApp.Models
@using ActivityManagementApp.ViewModels
@using ActivityManagementApp.Services
@using System.ComponentModel.DataAnnotations

<EditForm Model="Model" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary class="text-danger" />

    <!-- カテゴリタイプ名 -->
    <div class="mb-3">
        <label class="form-label">カテゴリタイプ名</label>
        <InputText class="form-control" @bind-Value="Model.TypeName" />
        <ValidationMessage For="() => Model.TypeName" class="text-danger" />
    </div>

    <!-- 背景色キー（セレクトボックス） -->
    <div class="mb-3">
        <label class="form-label">背景色</label>
        <InputSelect class="form-control"
                     @bind-Value="Model.ColorKey"
                     @bind-Value:after="OnColorChanged">
            <option value="">-- 背景色を選択 --</option>
            @foreach (var option in colorOptions)
            {
                <option value="@option.Key">@option.Label</option>
            }
        </InputSelect>
        <ValidationMessage For="() => Model.ColorKey" class="text-danger" />
    </div>

    <!-- プレビュー -->
    @if (!string.IsNullOrEmpty(Model.ColorKey))
    {
        <div class="mb-3">
            <label class="form-label">プレビュー</label>
            <div>
                <span class="badge
                 @ColorClassBuilder.BuildBackgroundBadgeClass(
                      Model.ColorKey,
                                   Model.TextColorKey
                               )">
                    @(!string.IsNullOrWhiteSpace(Model.TypeName) ? Model.TypeName : "プレビュー")
                </span>
            </div>
        </div>
    }

    <!-- ボタン　-->
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">保存</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancel">キャンセル</button>
    </div>
</EditForm>

@code {
    [Parameter] public CategoryTypeEditViewModel Model { get; set; } = new();

    [Parameter] public EventCallback<CategoryTypeEditViewModel> OnSave { get; set; }

    [Parameter] public EventCallback OnCancel { get; set; }

    private IEnumerable<ColorDefinition> colorOptions = ColorPalette.All;

    protected override void OnParametersSet()
    {
        if (!string.IsNullOrEmpty(Model.ColorKey) && string.IsNullOrEmpty(Model.TextColorKey))
        {
            UpdateTextColorKey();
        }
    }

    private async Task HandleValidSubmit()
    {
        await OnSave.InvokeAsync(Model);
    }

    private async Task Cancel()
    {
        await OnCancel.InvokeAsync();
    }

    private void OnColorChanged()
    {
        UpdateTextColorKey();
    }

    private void UpdateTextColorKey()
    {
        Model.TextColorKey = ColorPalette.GetTextColor(Model.ColorKey);
    }
}