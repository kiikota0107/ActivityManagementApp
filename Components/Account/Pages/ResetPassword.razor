@page "/Account/ResetPassword"

@using ActivityManagementApp.ViewModels
@using ActivityManagementApp.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using System.Text

@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>パスワード再設定</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white fw-bold text-center">
                    パスワード再設定
                </div>

                <div class="card-body">

                    @if (string.IsNullOrEmpty(Code))
                    {
                        <div class="alert alert-danger">
                            パスワード再設定コードが無効です。
                        </div>
                    }
                    else
                    {
                        <EditForm Model="Input"
                                  OnValidSubmit="OnValidSubmitAsync"
                                  method="post"
                                  FormName="reset">

                            <DataAnnotationsValidator />
                            <ValidationSummary class="text-danger mb-2" />

                            <!-- Password -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">新しいパスワード</label>
                                <InputText type="password"
                                           @bind-Value="Input.Password"
                                           class="form-control"
                                           autocomplete="new-password"
                                           aria-required="true" />
                                <ValidationMessage For="@(() => Input.Password)" class="text-danger" />
                            </div>

                            <!-- Confirm Password -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">新しいパスワード（確認）</label>
                                <InputText type="password"
                                           @bind-Value="Input.ConfirmPassword"
                                           class="form-control"
                                           autocomplete="new-password"
                                           aria-required="true" />
                                <ValidationMessage For="@(() => Input.ConfirmPassword)" class="text-danger" />
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mt-2">
                                パスワードを変更する
                            </button>

                        </EditForm>
                    }

                </div>
            </div>

        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private AuthInputModels.ResetPasswordInputModel Input { get; set; } = new();

    [SupplyParameterFromQuery(Name = "code")]
    public string? Code { get; set; }

    // 成功後は確認画面へ遷移
    private async Task OnValidSubmitAsync()
    {
        if (string.IsNullOrEmpty(Code))
        {
            return;
        }

        var user = await UserManager.FindByEmailAsync(Input.Email);
        if (user is null)
        {
            // ユーザー不存在でも画面遷移を隠す
            RedirectManager.RedirectTo("Account/ResetPasswordConfirmation");
            return;
        }

        var decoded = Encoding.UTF8.GetString(WebEncoders.Base64UrlDecode(Code));
        var result = await UserManager.ResetPasswordAsync(user, decoded, Input.Password);

        if (result.Succeeded)
        {
            RedirectManager.RedirectTo("Account/ResetPasswordConfirmation");
        }
        else
        {
            foreach (var error in result.Errors)
            {
                // ValidationSummary に表示
                Input.ModelValidationErrors.Add(error.Description);
            }
        }
    }
}
