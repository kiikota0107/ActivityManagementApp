@page "/Account/ForgotPassword"

@using ActivityManagementApp.ViewModels
@using ActivityManagementApp.Data
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.WebUtilities
@using System.Text
@using System.Text.Encodings.Web

@inject UserManager<ApplicationUser> UserManager
@inject IEmailSender<ApplicationUser> EmailSender
@inject NavigationManager NavigationManager
@inject IdentityRedirectManager RedirectManager

<PageTitle>パスワードリセット</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white fw-bold text-center">
                    パスワードをお忘れですか？
                </div>

                <div class="card-body">

                    <p class="text-muted mb-4">
                        登録したメールアドレスを入力してください。<br />
                        パスワード再設定用のリンクを送信します。
                    </p>

                    <EditForm Model="Input"
                              OnValidSubmit="OnValidSubmitAsync"
                              method="post"
                              FormName="forgot">

                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger mb-2" />

                        <!-- Email -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">メールアドレス</label>
                            <InputText @bind-Value="Input.Email"
                                       class="form-control"
                                       autocomplete="username"
                                       aria-required="true"
                                       placeholder="name@example.com" />
                            <ValidationMessage For="@(() => Input.Email)" class="text-danger" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mt-2">
                            送信する
                        </button>

                    </EditForm>
                </div>
            </div>

        </div>
    </div>
</div>

@code {
    // 共通 ViewModel を使用
    [SupplyParameterFromForm]
    private AuthInputModels.ForgotPasswordInputModel Input { get; set; } = new();

    private async Task OnValidSubmitAsync()
    {
        var user = await UserManager.FindByEmailAsync(Input.Email);

        // 既存ユーザーでなくても画面遷移は同じ（セキュリティ上の理由）
        if (user is null || !(await UserManager.IsEmailConfirmedAsync(user)))
        {
            RedirectManager.RedirectTo("Account/ForgotPasswordConfirmation");
            return;
        }

        // パスワードリセットトークン生成
        var code = await UserManager.GeneratePasswordResetTokenAsync(user);
        code = WebEncoders.Base64UrlEncode(Encoding.UTF8.GetBytes(code));

        var callbackUrl = NavigationManager.GetUriWithQueryParameters(
            NavigationManager.ToAbsoluteUri("Account/ResetPassword").AbsoluteUri,
            new Dictionary<string, object?> { ["code"] = code });

        await EmailSender.SendPasswordResetLinkAsync(
            user,
            Input.Email,
            HtmlEncoder.Default.Encode(callbackUrl)
        );

        RedirectManager.RedirectTo("Account/ForgotPasswordConfirmation");
    }
}
